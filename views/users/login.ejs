<head><link rel="stylesheet" type="text/css" href="/css/register.css"></head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 style="margin-left:50px;">Login</h2>
                <form class="custom-form"  action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1" width="200px;">Email address</label>
                        <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                            placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <% if(messages.error) { %>
                        <%= messages.error %>
                    <% } %>
                </form>
            </div>
        </div>
    </div>

